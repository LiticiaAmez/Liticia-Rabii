# Utiliser une image MariaDB officielle

FROM mariadb:latest

# Variables d'environnement pour configurer la base de données MariaDB

# Mot de passe root de la base de données MariaDB

ENV MYSQL_ROOT_PASSWORD=my_root_password

# Nom de la base de données pour WordPress

ENV MYSQL_DATABASE=my_wp_db # Nom de la base de données pour WordPress

# Nom d'utilisateur pour WordPress

ENV MYSQL_USER=my_wp_user

# Mot de passe pour l'utilisateur WordPress

ENV MYSQL_PASSWORD=my_wp_password
